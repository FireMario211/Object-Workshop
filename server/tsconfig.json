{
    "include": ["src/**/*.ts"],
    "compilerOptions": {
      "target": "ES2020",
      "module": "NodeNext",
      "moduleResolution": "nodenext",
      "esModuleInterop": true,
      "sourceMap": true,
      "outDir": "./dist",
      "baseUrl": ".",
      "resolveJsonModule": true,
      "forceConsistentCasingInFileNames": true,
      "strict": true,
      "skipLibCheck": true,
      "strictPropertyInitialization": false,
      "paths": {
        "@/*": ["src/*"]
      }
    },
    "exclude": [
      "node_modules",
      "**/*.spec.ts",
      "dist",
      "old"
    ]
}
